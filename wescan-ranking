  <script>
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('to-date').value = today;

    function formatDateForDisplay(dateStr) {
      const parts = dateStr.split('-');
      return `${parts[2]}/${parts[1]}/${parts[0]}`;
    }

    function formatDateForApi(dateStr) {
      return dateStr.replace(/-/g, '/');
    }

    function loadData() {
      const fromDate = document.getElementById('from-date').value;
      const toDate = document.getElementById('to-date').value;
      const apiUrl = `https://wescan.vn/api/v1/donator_ranks?user_id=88005c37c9964a7583913ad116b26d74&sort_by=base_price&sort_type=desc&limit=1000&from_date=${formatDateForApi(fromDate)}&to_date=${formatDateForApi(toDate)}`;

      document.getElementById('loading-overlay').style.display = 'flex';
      document.getElementById('date-range').textContent = `üìÖ D·ªØ li·ªáu t·ª´: ${formatDateForDisplay(fromDate)} ƒë·∫øn ${formatDateForDisplay(toDate)}`;

      if ($.fn.DataTable.isDataTable('#donatorTable')) {
        $('#donatorTable').DataTable().destroy();
      }

      fetch(apiUrl)
        .then(res => {
          if (!res.ok) {
            throw new Error(`HTTP error! status: ${res.status}`);
          }
          return res.json();
        })
        .then(data => {
          console.log('API Response:', data); // Debug d·ªØ li·ªáu API

          if (!data || !data.data || !data.data.items) {
            throw new Error('D·ªØ li·ªáu API kh√¥ng h·ª£p l·ªá ho·∫∑c tr·ªëng');
          }

          const rows = [];
          let totalAmount = 0;
          let totalTimes = 0;
          let rankIndex = 0;

          data.data.items.forEach(item => {
            if (item.ranks && Array.isArray(item.ranks)) {
              item.ranks.forEach(rank => {
                rankIndex++;
                const starIcon = rankIndex <= 3 ? '‚≠ê ' : '';
                rows.push(`
                  <tr>
                    <td>${starIcon}${rank.name || 'Kh√¥ng x√°c ƒë·ªãnh'}</td>
                    <td>${(rank.amount || 0).toLocaleString()}</td>
                    <td>${(rank.real_amount || 0).toLocaleString()}</td>
                    <td>${rank.times || 0}</td>
                    <td>${rank.group || 'Kh√¥ng c√≥'}</td>
                  </tr>
                `);
                totalAmount += rank.amount || 0;
                totalTimes += rank.times || 0;
              });
            }
          });

          // N·∫øu kh√¥ng c√≥ d·ªØ li·ªáu, hi·ªÉn th·ªã th√¥ng b√°o
          if (rows.length === 0) {
            document.querySelector("#donatorTable tbody").innerHTML = '<tr><td colspan="5">Kh√¥ng c√≥ d·ªØ li·ªáu hi·ªÉn th·ªã</td></tr>';
            document.getElementById("total-amount").textContent = "0 VND";
            document.getElementById("total-times").textContent = "0 l·∫ßn";
          } else {
            document.querySelector("#donatorTable tbody").innerHTML = rows.join("");
            document.getElementById("total-amount").textContent = totalAmount.toLocaleString() + " VND";
            document.getElementById("total-times").textContent = totalTimes + " l·∫ßn";

            console.log(rows);
          }

          if ($.fn.dataTable.isDataTable('#donatorTable')) {
            $('#donatorTable').DataTable().clear().destroy();
          }

          $('#donatorTable').DataTable({
            paging: false,
            info: false,
            order: [[1, 'desc']],
            language: {
              search: "T√¨m ki·∫øm:",
              zeroRecords: "Kh√¥ng c√≥ k·∫øt qu·∫£.",
              emptyTable: "Kh√¥ng c√≥ d·ªØ li·ªáu hi·ªÉn th·ªã"
            }
          });

          // ·∫®n loading overlay v√† hi·ªÉn th·ªã b·∫£ng
          document.getElementById('loading-overlay').style.display = 'none';
          document.getElementById('donatorTable').classList.add('visible');
        })
        .catch(err => {
          console.error('L·ªói:', err);
          document.getElementById('loading').textContent = "L·ªói khi t·∫£i d·ªØ li·ªáu!";
          document.querySelector("#donatorTable tbody").innerHTML = '<tr><td colspan="5">L·ªói khi t·∫£i d·ªØ li·ªáu</td></tr>';
          document.getElementById('loading-overlay').style.display = 'none';
          document.getElementById('donatorTable').classList.add('visible');
        });
    }

    // Load initial data
    loadData();

    // Add event listeners for date inputs
    // document.getElementById('from-date').addEventListener('change', loadData);
    // document.getElementById('to-date').addEventListener('change', loadData);
  </script>
